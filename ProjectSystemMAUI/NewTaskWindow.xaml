<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectSystemMAUI.NewTaskWindow"
             Title="NewTaskWindow">
    <StackLayout>
        <Label Text="Название"/>
        <Entry Text="{Binding Task.Title}"/>
        <Label Text="Описание"/>
        <Entry Text="{Binding Task.Description}"/>
        <Label Text="Проект"/>
        <Picker ItemsSource="{Binding Projects}" SelectedItem="{Binding Project}" ItemDisplayBinding="Title"/>
        <Button Text="Сохранить" Clicked="SaveClick"/> 
    </StackLayout>
</ContentPage>
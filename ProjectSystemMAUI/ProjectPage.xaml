<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectSystemMAUI.ProjectPage"
             Title="ProjectPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Задачи">
        <MenuFlyoutItem Text="Все задачи"
                Clicked= "TasksClick" />
</MenuBarItem>
        <!--<MenuBarItem Text="Проекты">
            <MenuFlyoutItem Text="Все проекты"
            Clicked= "ProjectsClick" />
        </MenuBarItem>-->
    </ContentPage.MenuBarItems>

    <StackLayout>
        <CollectionView ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Title}"/>
                            <Label Text="{Binding Deadlines}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout>
            <Button Text="Добавить" Clicked="NewProjectClick"/>
            <Button Text="Изменить" Clicked="UpdateProjectClick"/>
            <Button Text="Удалить" Clicked="DeleteProjectClick"/>
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>